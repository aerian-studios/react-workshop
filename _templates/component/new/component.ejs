---
to: src/components/<%= h.inflection.undasherize(name) %>/<%= h.inflection.undasherize(name) %>.jsx
---
<% const comp = h.inflection.undasherize(name) -%>
import React from "react";

import * as styles from "./<%= comp %>.scss";

<% if(locals.class) { -%>

const INITIAL_STATE = {
    myProp: true,
};

export class <%= comp %> extends React.PureComponent {
    public state = INITIAL_STATE;

    public render() {
        return (
            <div className={styles.base} style={this.props.style}>
                {this.props.children}
            </div>
        );
    }
}
<% } else { %>
export const <%= comp %> = ({ children, style }) => (
    <div className={styles.base} style={style}>
        {children}
    </div>
);
<% } -%>
export default <%= comp %>;
